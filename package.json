  },
  "devDependencies": {
    "@types/react": "17.0.1",
    "@types/react-dom": "17.0.0",
    "@types/typography": "0.16.3",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "microbundle": "0.13.0",
    "next": "10.0.6",
    "prettier": "2.2.1",
    "standard-version": "9.1.0",
    "typescript": "4.1.2",
    "typography": "0.16.19"
  },
  "lint-staged": {
    "src/**/*.{tsx}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
